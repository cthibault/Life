<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    x:Class="MVVM.Life.Views.ControlPanelView" 
    mc:Ignorable="d" >

	<StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
        <Button Content="Start" Command="{Binding StartCommand}" Width="65" Height="25" Margin="2,2,2,2" />
        <Button Content="Stop" Command="{Binding StopCommand}" Width="65" Height="25" Margin="2,2,2,2"/>
        <Button Content="Step" Command="{Binding StepCommand}" Width="65" Height="25" Margin="2,2,2,2"/>
        <Button Content="Clear" Command="{Binding ClearCommand}" Width="65" Height="25" Margin="2,2,2,2"/>
        <Button Content="Randomize" Command="{Binding RandomizeCommand}" Width="65" Height="25" Margin="2,2,2,2"/>
        <Button Content="Settings" Command="{Binding SettingsCommand}" Width="65" Height="25" Margin="2,2,2,2"/>
    </StackPanel>

</UserControl>
